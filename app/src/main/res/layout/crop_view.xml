<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cart Item -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Crop Image -->
            <ImageView
                android:id="@+id/imageViewCrop"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/welcomeim" />

            <!-- Crop Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Crop Name -->
                <TextView
                    android:id="@+id/textViewCropName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop Name"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Planting Date -->
                <TextView
                    android:id="@+id/textViewPlantingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planting Date"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <!-- Soil Type -->
                <TextView
                    android:id="@+id/textViewSoilType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Type"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <!-- Other Information -->
                <TextView
                    android:id="@+id/textViewOtherInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Information"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <!-- Address TextView -->
                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />


                <!-- Edit and Delete Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Edit Button -->
                    <ImageButton
                        android:id="@+id/buttonEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit_crop"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp" />

                    <!-- Delete Button -->
                    <ImageButton
                        android:id="@+id/buttonDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_delete_24"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>