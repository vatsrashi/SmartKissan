<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <!-- activity_welcome.xml -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".WelcomeActivity">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/welcome_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="100dp"
            android:text="Welcome to SmartKissan"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/welcome_next_button"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="89dp"
            android:gravity="center"
            android:text="One Stop solution for farmers"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <Button
            android:id="@+id/welcome_next_button"
            android:layout_width="225dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="329dp"
            android:backgroundTint="@color/green"
            android:text="Get Started" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/welcomeim" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>