<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".TransportConfirmed">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Booking details" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Booking ID"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Crop"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Wheat"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="22 Tons"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Delhi"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Land"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Land1"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20/03/24"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:35"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:text="Total Bill" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Rs.2000" />


        <Button
            android:id="@+id/back_home"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Back to home" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Confirmed"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>