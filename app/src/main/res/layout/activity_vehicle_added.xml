<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".VehicleAdded">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Vehicle details" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Type"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tractor"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Model Name"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mahindra tractor"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Jack"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Registration no."
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="HR26FG0001"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20/03/24"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/booking_id_title3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/booking_id_value3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:35"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/back_home"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Back to home" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Added"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>